<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.onbesPuzzle.GameActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <TextView
            android:id="@+id/text_view_steps"
            android:layout_width="0dp"
            android:layout_height="82dp"
            android:layout_weight="1"
            android:fontFamily="@font/architects_daughter"
            android:gravity="center"
            android:text="Adım: 0"
            android:textColor="#B33771"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:fontFamily="@font/architects_daughter"
            android:gravity="center"
            android:text="Süre: "
            android:textColor="#B33771"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/group"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button1"
            style="@style/ButtonStyle"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/architects_daughter"
            android:tag="00"
            android:text="1"
            android:textColor="#01a3a4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            style="@style/ButtonStyle"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/button1"
            android:fontFamily="@font/architects_daughter"
            android:tag="01"
            android:text="2"
            android:textColor="#01a3a4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            style="@style/ButtonStyle"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/button2"
            android:fontFamily="@font/architects_daughter"
            android:tag="02"
            android:text="3"
            android:textColor="#01a3a4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            style="@style/ButtonStyle"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/button3"
            android:fontFamily="@font/architects_daughter"
            android:tag="03"
            android:text="4"
            android:textColor="#01a3a4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button5"
            style="@style/ButtonStyle"
            android:layout_below="@id/button1"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/architects_daughter"
            android:tag="10"
            android:text="5"
            android:textColor="#01a3a4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button6"
            style="@style/ButtonStyle"
            android:layout_below="@id/button2"
            android:layout_toEndOf="@id/button1"
            android:fontFamily="@font/architects_daughter"
            android:tag="11"
            android:text="6"
            android:textColor="#01a3a4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button7"
            style="@style/ButtonStyle"
            android:layout_below="@id/button3"
            android:layout_toEndOf="@id/button2"
            android:fontFamily="@font/architects_daughter"
            android:tag="12"
            android:text="7"
            android:textColor="#01a3a4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button8"
            style="@style/ButtonStyle"
            android:layout_below="@id/button4"
            android:layout_toEndOf="@id/button3"
            android:fontFamily="@font/architects_daughter"
            android:tag="13"
            android:text="8"
            android:textColor="#01a3a4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button9"
            style="@style/ButtonStyle"
            android:layout_below="@id/button5"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/architects_daughter"
            android:tag="20"
            android:text="9"
            android:textColor="#01a3a4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button10"
            style="@style/ButtonStyle"
            android:layout_below="@id/button5"
            android:layout_toEndOf="@id/button1"
            android:fontFamily="@font/architects_daughter"
            android:tag="21"
            android:text="10"
            android:textColor="#01a3a4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button11"
            style="@style/ButtonStyle"
            android:layout_below="@id/button5"
            android:layout_toEndOf="@id/button2"
            android:fontFamily="@font/architects_daughter"
            android:tag="22"
            android:text="11"
            android:textColor="#01a3a4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button12"
            style="@style/ButtonStyle"
            android:layout_below="@id/button5"
            android:layout_toEndOf="@id/button3"
            android:fontFamily="@font/architects_daughter"
            android:tag="23"
            android:text="12"
            android:textColor="#01a3a4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button13"
            style="@style/ButtonStyle"
            android:layout_below="@id/button9"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/architects_daughter"
            android:tag="30"
            android:text="13"
            android:textColor="#01a3a4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button14"
            style="@style/ButtonStyle"
            android:layout_below="@id/button9"
            android:layout_toEndOf="@id/button1"
            android:fontFamily="@font/architects_daughter"
            android:tag="31"
            android:text="14"
            android:textColor="#01a3a4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button15"
            style="@style/ButtonStyle"
            android:layout_below="@id/button9"
            android:layout_toEndOf="@id/button2"
            android:fontFamily="@font/architects_daughter"
            android:tag="32"
            android:text="15"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#01a3a4" />

        <Button
            android:id="@+id/button16"
            style="@style/ButtonStyle"
            android:layout_below="@id/button9"
            android:layout_toEndOf="@id/button3"
            android:background="@color/freebutton"
            android:fontFamily="@font/architects_daughter"
            android:tag="33"
            android:text=""
            android:textColor="#01a3a4"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <Button
            android:id="@+id/button_shuffle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lila_mavi_button"
            android:fontFamily="@font/architects_daughter"
            android:text="Karıştır"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button

            android:id="@+id/button_stop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lila_mavi_button"
            android:fontFamily="@font/architects_daughter"
            android:text="Durdur"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="329dp"
        android:layout_height="502dp">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="128dp"
            android:layout_height="77dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_time" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="107dp"
            android:layout_height="130dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView19"
            app:srcCompat="@drawable/ic_hand_stop" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="125dp"
            android:layout_height="109dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="268dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView13"
            app:srcCompat="@drawable/ic_shuffle" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="86dp"
            android:layout_height="139dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_step" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>